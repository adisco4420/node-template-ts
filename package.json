{
  "name": "node-template-ts",
  "description": "Boiler Plate for node application",
  "version": "1.0.0",
  "private": true,
  "author": "Sodiq Alabi",
  "scripts": {
    "dev": "nodemon ./bin/www",
    "staging": "NODE_ENV=dev node ./bin/www",
    "grunt": "grunt",
    "build": "npm run grunt prod",
    "test": "NODE_ENV=test mocha -r ts-node/register src/test/**/*.ts --timeout 30000 --exit",
    "test_windows": "cross-env NODE_ENV=test mocha -r ts-node/register src/test/**/*.ts --timeout 50000 --exit",
    "start": "node ./bin/www"
  },
  "engines": {
    "node": "10.15.3"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "bcrypt": "^5.0.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "grunt": "^1.3.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-ts": "^6.0.0-beta.22",
    "helmet": "^4.2.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.14",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/errorhandler": "1.5.0",
    "@types/mongodb": "^3.5.33",
